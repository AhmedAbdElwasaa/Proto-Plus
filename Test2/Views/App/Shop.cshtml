@model IEnumerable<Product>



<h1>Shop</h1>
<p>Count:@Model.Count() </p>
<div class="row">
    @foreach (var p in Model)
    {
        <div class="col-md-3">
            <div class="border bg-light rounded p-1 ">
                <img class="img-fluid" src="~/Image/@(p.DeviceId).jpg" alt="@p.Title" />
                <h1>@p.Category - @p.Size</h1>
                <ul class="product-props">
                    <li>Price:$@p.Price</li>
                    <li>Manfacture: @p.Manfacturer </li>
                    <li>Title: @p.Title</li>
                    <li>Description:@p.DeviceDescription</li>

                </ul>
                <button type="submit" id="buyButton" class="btn btn-success">Buy</button>
            </div>
        </div>
    }
</div>
